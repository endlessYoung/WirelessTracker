<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/bg_glass_overlay.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 第一层：透明渐变 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:angle="308"
                android:centerColor="#33000000"
                android:centerX="0.88"
                android:endColor="#00000000"
                android:gradientRadius="120%"
                android:startColor="#33969696"
                android:type="linear" />
        </shape>
    </item>

    <!-- 第二层：半透明底色 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#52222733" /> <!-- rgba(34,39,51,0.32) -->
        </shape>
    </item>

</layer-list>